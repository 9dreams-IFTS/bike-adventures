  <!-- Sezione Form di Contatto -->
  <div class="mt-16 p-8 rounded-lg shadow-lg" style="background: url('https://www.bikeadventureseries.com/wp-content/uploads/2025/01/bikeadventure-bikepacking-12-scaled.jpg') center/cover; background-blend-mode: overlay; background-color: rgba(0, 0, 0, 0.5);">
    <h2 class="text-2xl font-bold text-white mb-6 text-center">Invia una richiesta</h2>
    <form action="#" method="POST" class="space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="name" class="block text-lg font-semibold text-white">Nome</label>
          <input type="text" id="name" name="name" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-white text-white bg-opacity-75" required>
        </div>
        <div>
          <label for="email" class="block text-lg font-semibold text-white">Email</label>
          <input type="email" id="email" name="email" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500 text-white bg-opacity-75" required>
        </div>
      </div>
      <div>
        <label for="subject" class="block text-lg font-semibold text-white">Oggetto</label>
        <input type="text" id="subject" name="subject" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500 text-white bg-opacity-75" required>
      </div>
      <div>
        <label for="message" class="block text-lg font-semibold text-white">Messaggio</label>
        <textarea id="message" name="message" rows="5" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500 text-white bg-opacity-75" required></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="px-6 py-3 text-lg font-semibold text-white rounded-lg hover:bg-white hover:text-black transition-all duration-300">
          Invia
        </button>
      </div>
    </form>
  </div>
