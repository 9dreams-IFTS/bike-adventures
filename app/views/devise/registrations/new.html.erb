<div class="max-w-md mx-auto mt-12 bg-white p-8 rounded-xl shadow-md">
  <h2 class="text-2xl font-semibold text-center mb-6 text-gray-800">Crea un nuovo account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    
    <!-- Errori -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email -->
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Password -->
    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mb-1">(<%= @minimum_password_length %> caratteri minimo)</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Conferma Password -->
    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Submit -->
    <div>
      <%= f.submit "Registrati", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-700 transition-colors duration-300" %>
    </div>

  <% end %>

  <!-- Link accessori -->
  <div class="mt-6 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
